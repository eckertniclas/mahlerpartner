    },
    {
      "type": "text",
      "id": "title",
      "label": "t:all.Heading"
    },
    {
      "type": "text",
      "id": "text",
      "label": "t:all.Description"
    },
    {
      "type": "url",
      "id": "link",
      "label": "t:all.Image_link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "t:all.Button_label"
    },
    {
      "type": "header",
      "content": "t:all.Layout"
    },
    {
      "type": "select",
      "id": "image_position_desktop",
      "label": "t:all.image_position_desktop",
      "options": [
        {
          "value": "left",
          "label": "t:all.Left"
        },
        {
          "value": "right",
          "label": "t:all.Right"
        }
      ],
      "default": "right"
    },
