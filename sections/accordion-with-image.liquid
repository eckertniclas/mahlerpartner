    },
    {
      "type": "color",
      "id": "image--text-color",
      "label": "t:sections.product--accordion-with-image.settings.image--text-color.label",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "button_background_color",
      "label": "t:all.Button_background",
